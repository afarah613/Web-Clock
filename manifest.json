{
	"manifest_version": 2,
	"name": "Web Clock",
	"description": "Web Clock is a simple chrome extension that will show you the amount of time you spend on a website each day.",
	"version": "1.1",

	 "browser_action": {
    "default_icon": "timer.png",
    "default_popup": "popup.html",
    "default_title": "Example"
  },
   "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google.com ; object-src 'self'", 
  "permissions": [
    "tabs",
	"idle"
  ]
}
